@page "{date?}"
@model SW4BED_3.Pages.KitchenModel
@{
    ViewData["Title"] = "Kitchen";
}

<h1 class="display-4">Kitchen</h1>

<form method="get">
    <div class="form-group row">
        <div class="col-sm-3">
            <label asp-for="@Model.Date"></label>
            <input asp-for="@Model.Date" class="form-control" type="date" />
        </div>
        <div class="col-sm-3">
            <button type="submit" class="btn btn-primary mt-4">Update</button>
        </div>
    </div>
</form>

<div class="card mb-4">
    <div class="card-header">
        Reservation summary for @ViewData["Date"]
    </div>
    <div class="card-body">
        <ul class="list-group list-group-flush">
            <li class="list-group-item">
                Expected total guests: @ViewData["ExpectedTotal"]
            </li>
            <li class="list-group-item">
                Expected adult guests: @ViewData["ExpectedAdults"]
            </li>
            <li class="list-group-item">
                Expected child guests: @ViewData["ExpectedKids"]
            </li>
            <li class="list-group-item">
                Actual adult guests checked in: @ViewData["ActualAdults"]
            </li>
            <li class="list-group-item">
                Actual child guests checked in: @ViewData["ActualKids"]
            </li>
            <li class="list-group-item">
                Remaining adult guests: @ViewData["RemainingAdults"]
            </li>
            <li class="list-group-item">
                Remaining child guests: @ViewData["RemainingKids"]
            </li>
        </ul>
    </div>

</div>

<script src="~/lib/microsoft/signalr/dist/browser/signalr.js" crossorigin="anonymous"></script>
<script src="~/js/chat.js"></script>