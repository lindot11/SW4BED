@page
@model SW4BED_3.Pages.HotelModel
@{
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <h1 class="text-center display-4">Breakfast booking</h1>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-md-6">
            <h2>Add Breakfast Reservation</h2>
	        <form method="post">
		        <div class="form-group">
			        <label for="RoomNumber">Room Number:</label>
			        <input class="form-control" type="number" asp-for="RoomNumber">
		        </div>
		        <div class="form-group">
			        <label for="NrAdults">Adults:</label>
			        <input class="form-control" type="number" asp-for="AdultsReservations">
		        </div>
		        <div class="form-group">
			        <label for="NrChildren">Children:</label>
			        <input class="form-control" type="number" asp-for="KidsReservations">
		        </div>
		        <div class="form-group">
			        <label for="ReservationDate">Reservation Date:</label>
			        <input class="form-control" type="date" asp-for="SelectedDate">
		        </div>
		        <div class="form-group text-center">
			        <button class="btn btn-primary" type="submit">Add Reservation</button>
		        </div>
	        </form>
            
	        <div class="text-left">Status: @ViewData["ServerResponse"]</div>
	        
	            <div class="text-left mt-3">
		            <h3>Details:</h3>
		            <p>@ViewData["ResponseDate"]</p>
		            <p>@ViewData["ResponseRoom"]</p>
		            <p>@ViewData["ResponseAdults"]</p>
		            <p>@ViewData["ResponseKids"]</p>
	            </div>

        </div>
        <div class="col-md-6">
            <h2>This many fat fucks gobbled through the buffet on date: </h2>
            <form method="post">
                <div class="form-group">
                    <label for="BreakfastDate">Date:</label>
                    <input class="form-control" type="date" asp-for="SelectedDate">
                </div>
                <div class="form-group text-center">
                    <button class="btn btn-primary" type="submit">Update List</button>
                </div>
            </form>
            <table class="table table-striped table-hover mt-3">
                <thead>
                    <tr>
                        <th>Room Number</th>
                        <th>Adults Checked In</th>
                        <th>Kids Checked In</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var room in Model.CheckedInRooms)
                    {
                        <tr>
                            <td>@room.RoomNumber</td>
                            <td>@room.AdultsCheckIn</td>
                            <td>@room.KidsCheckIn</td>
                        </tr>
                    }
                    <tr>
                        <td><strong>Total:</strong></td>
                        <td><strong>@Model.TotalAdults</strong></td>
                        <td><strong>@Model.TotalKids</strong></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
